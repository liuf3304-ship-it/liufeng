/* app.wxss */

/* 全局样式重置 */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 全局字体和背景 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333333;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

/* 副标题样式 */
.subtitle {
  font-size: 28rpx;
  margin-bottom: 15rpx;
  color: #666666;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  background-color: #007aff;
  color: #ffffff;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
  cursor: pointer;
}

.btn:active {
  background-color: #0056b3;
}

.btn-disabled {
  background-color: #cccccc;
  cursor: not-allowed;
}

/* 输入框样式 */
.input {
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 列表项样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 20rpx;
  color: #999999;
}

/* 错误提示 */
.error {
  color: #ff3b30;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

/* 成功提示 */
.success {
  color: #4cd964;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

/* 居中布局 */
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 左右布局 */
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 弹性布局 */
.flex {
  display: flex;
  align-items: center;
}

/* 圆角头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 标签样式 */
.tag {
  background-color: #e8f0fe;
  color: #007aff;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  margin-right: 10rpx;
}
