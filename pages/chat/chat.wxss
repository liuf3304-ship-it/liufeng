/* chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 没有更多消息提示 */
.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 空消息提示 */
.empty-messages {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 消息项 */
.message-item {
  margin-bottom: 30rpx;
}

/* 消息内容 */
.message-content {
  display: flex;
  align-items: flex-start;
}

/* 我的消息 */
.my-message {
  flex-direction: row-reverse;
}

/* 对方消息 */
.other-message {
  flex-direction: row;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
  background-color: #fff;
}

/* 消息气泡 */
.message-bubble {
  max-width: 60%;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
  word-break: break-all;
}

/* 我的消息气泡 */
.my-message .message-bubble {
  background-color: #07c160;
  color: #fff;
  border-bottom-right-radius: 0;
}

/* 对方消息气泡 */
.other-message .message-bubble {
  background-color: #fff;
  color: #333;
  border-bottom-left-radius: 0;
}

/* 消息文本 */
.message-text {
  font-size: 28rpx;
  line-height: 40rpx;
}

/* 消息时间 */
.message-time {
  display: block;
  font-size: 20rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
}

/* 我的消息时间 */
.my-message .message-time {
  color: rgba(255, 255, 255, 0.7);
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: flex-end;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
}

/* 输入框 */
.input-text {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  resize: none;
}

/* 输入框占位符 */
.placeholder {
  color: #999;
}

/* 发送按钮 */
.send-btn {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 禁用状态的发送按钮 */
.send-btn[disabled] {
  background-color: #ccc;
  color: #fff;
}
