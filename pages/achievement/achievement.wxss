/* achievement.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 成就统计卡片 */
.achievement-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 统计项 */
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 统计数字 */
.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

/* 统计标签 */
.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 统计分隔线 */
.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background-color: #e5e5e5;
}

/* 标签栏 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 标签项 */
.tab-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

/* 激活的标签 */
.tab-item.active {
  color: #07c160;
}

/* 激活标签的下划线 */
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 成就列表 */
.achievement-list {
  margin-bottom: 20rpx;
}

/* 加载中容器 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态容器 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 成就项列表 */
.achievement-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 成就项卡片 */
.achievement-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

/* 成就项点击效果 */
.achievement-item:active {
  transform: scale(0.98);
}

/* 成就项头部 */
.achievement-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

/* 成就信息 */
.achievement-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 成就名称 */
.achievement-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 成就类型 */
.achievement-type {
  font-size: 24rpx;
  color: #666;
}

/* 成就等级 */
.achievement-level {
  display: inline-block;
  font-size: 20rpx;
  padding: 5rpx 15rpx;
  border-radius: 15rpx;
  color: #fff;
  font-weight: bold;
  width: fit-content;
}

/* 等级样式 */
.level-1 {
  background-color: #07c160;
}

.level-2 {
  background-color: #10aeff;
}

.level-3 {
  background-color: #ff9500;
}

.level-4 {
  background-color: #ff3b30;
}

/* 成就状态 */
.achievement-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

/* 已完成状态 */
.achievement-status.completed {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

/* 进行中状态 */
.achievement-status.in-progress {
  background-color: rgba(16, 174, 255, 0.1);
  color: #10aeff;
}

/* 成就描述 */
.achievement-description {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

/* 成就进度 */
.achievement-progress {
  margin-bottom: 20rpx;
}

/* 进度条容器 */
.progress-bar {
  width: 100%;
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 5rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

/* 进度条填充 */
.progress-fill {
  height: 100%;
  background-color: #07c160;
  transition: width 0.3s ease;
}

/* 进度文本 */
.progress-text {
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 成就项底部 */
.achievement-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 成就奖励 */
.achievement-reward {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 奖励图标 */
.reward-icon {
  font-size: 32rpx;
}

/* 奖励积分 */
.reward-points {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: bold;
}

/* 完成时间 */
.achievement-completed-time {
  font-size: 22rpx;
  color: #999;
}

/* 同步按钮容器 */
.sync-button-container {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

/* 同步按钮 */
.sync-button {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx 50rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 15rpx rgba(7, 193, 96, 0.3);
  transition: transform 0.2s ease;
}

/* 同步按钮点击效果 */
.sync-button:active {
  transform: scale(0.95);
}

/* 同步图标 */
.sync-icon {
  font-size: 32rpx;
}
