/* detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 返回按钮 */
.back-button {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
}

/* 返回图标 */
.back-icon {
  font-size: 32rpx;
  color: #333;
}

/* 返回文本 */
.back-text {
  font-size: 28rpx;
  color: #333;
}

/* 详情容器 */
.detail-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: calc(100vh - 100rpx);
}

/* 加载中容器 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx;
  color: #999;
  font-size: 28rpx;
}

/* 成就详情卡片 */
.achievement-detail {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 成就头部 */
.achievement-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

/* 成就名称 */
.achievement-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

/* 成就等级 */
.achievement-level {
  display: inline-block;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: #fff;
  font-weight: bold;
  width: fit-content;
}

/* 等级样式 */
.level-1 {
  background-color: #07c160;
}

.level-2 {
  background-color: #10aeff;
}

.level-3 {
  background-color: #ff9500;
}

.level-4 {
  background-color: #ff3b30;
}

/* 成就状态 */
.achievement-status {
  align-self: flex-start;
  padding: 10rpx 25rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 已完成状态 */
.achievement-status.completed {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

/* 进行中状态 */
.achievement-status.in-progress {
  background-color: rgba(16, 174, 255, 0.1);
  color: #10aeff;
}

/* 成就描述 */
.achievement-description {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
  background-color: #f9f9f9;
  padding: 25rpx;
  border-radius: 15rpx;
}

/* 成就进度 */
.achievement-progress {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 进度信息 */
.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 进度标题 */
.progress-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 进度值 */
.progress-value {
  font-size: 26rpx;
  color: #666;
}

/* 进度条容器 */
.progress-bar {
  width: 100%;
  height: 15rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 进度条填充 */
.progress-fill {
  height: 100%;
  background-color: #07c160;
  transition: width 0.3s ease;
  border-radius: 8rpx;
}

/* 进度百分比 */
.progress-percentage {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

/* 成就奖励 */
.achievement-reward {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  background-color: rgba(7, 193, 96, 0.05);
  padding: 25rpx;
  border-radius: 15rpx;
  border: 1rpx solid rgba(7, 193, 96, 0.2);
}

/* 奖励标题 */
.reward-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 奖励内容 */
.reward-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

/* 奖励图标 */
.reward-icon {
  font-size: 40rpx;
}

/* 奖励积分 */
.reward-points {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}

/* 完成时间 */
.achievement-completed-time {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
}

/* 完成标签 */
.completed-label {
  font-weight: bold;
}

/* 完成值 */
.completed-value {
  color: #999;
}

/* 成就类型 */
.achievement-type {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
}

/* 类型标签 */
.type-label {
  font-weight: bold;
}

/* 类型值 */
.type-value {
  color: #999;
}

/* 错误容器 */
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx;
  color: #ff3b30;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
