/* feedback.wxss */

/* 基础样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 页面标题 */
.page-header {
  margin-bottom: 30rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 表单容器 */
.feedback-form {
  width: 100%;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 反馈类型选项 */
.type-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fff;
  cursor: pointer;
  transition: all 0.3s ease;
}

.type-option.active {
  border-color: #007aff;
  background-color: #e6f2ff;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.type-text {
  font-size: 28rpx;
  color: #333;
}

/* 反馈内容输入框 */
.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.5;
  resize: none;
}

.content-input:focus {
  outline: none;
  border-color: #007aff;
}

/* 字符计数 */
.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 10rpx;
  display: block;
}

/* 图片上传区域 */
.upload-section {
  margin-top: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  cursor: pointer;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background-color: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 28rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 联系方式输入框 */
.contact-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.contact-input:focus {
  outline: none;
  border-color: #007aff;
}

/* 提交按钮区域 */
.submit-section {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.submit-btn:active {
  background-color: #0056b3;
}

.submit-btn[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
}

/* 提交提示 */
.submit-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
  display: block;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .form-section {
    background-color: #2a2a2a;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .page-title,
  .section-title,
  .type-text,
  .content-input,
  .contact-input {
    color: #fff;
  }
  
  .content-input,
  .contact-input,
  .type-option {
    border-color: #444;
    background-color: #2a2a2a;
  }
  
  .type-option.active {
    border-color: #007aff;
    background-color: #1a365d;
  }
  
  .add-image {
    background-color: #2a2a2a;
    border-color: #444;
  }
  
  .add-icon,
  .add-text,
  .upload-tip,
  .char-count,
  .submit-tip {
    color: #aaa;
  }
}